<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CoinGame.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label
               Text="Cara ou Coroa!"
               />

            <Label
                Text="Valor"
                x:Name="value"
            />

            <Image 
                    WidthRequest="100"
                   Source="dotnet_bot.png"
                   x:Name="ImageCoin"
                   
                   />

            <Picker x:Name="picker">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Cara</x:String>
                        <x:String>Coroa</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            <Label 
                Text="moeda Valor"
                x:Name="ValueCoin"
                />

            <Button
                Text="Jogue a Moeda"
                Clicked="Button_Clicked"
                BackgroundColor="Bisque"
                
                />



        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
